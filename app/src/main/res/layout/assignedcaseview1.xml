<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15sp"
    app:cardElevation="5sp"
    >
    <TextView
        android:id="@+id/casecat1"
        android:layout_marginTop="60sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:textSize="15sp"
        android:textStyle="normal"
        android:padding="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A phishing scheme targeting Indian financial institutions orchestrated by a group of hackers, resulting in a loss of INR 2.5 crore. The case involves ITA-2000 violations (Sections 66 and 43), with potential penalties including imprisonment, fines, and up to INR 2 crore in victim compensation via the adjudication process." />


    <TextView
        android:id="@+id/casetitle1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCDF CASE" />

    <TextView
        android:id="@+id/descin"
        android:layout_marginTop="35sp"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASE CATEGORY" />


</androidx.cardview.widget.CardView>