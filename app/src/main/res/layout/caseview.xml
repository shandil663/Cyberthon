<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:padding="3dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"


    >

    <androidx.cardview.widget.CardView
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:cardCornerRadius="30sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        app:cardElevation="5sp"
        android:layout_gravity="center_horizontal|end"
        >

        <ImageView
            android:id="@+id/imgmedview"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_5" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100sp"
        android:layout_height="140sp"
        app:cardCornerRadius="30sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="10sp"
        app:cardElevation="5sp"
        android:layout_gravity="center_horizontal|end|bottom"
        >

        <ImageView
            android:id="@+id/vimg"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2sp"
            app:srcCompat="@drawable/img_6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="View evidence" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/casetitle"
        android:layout_marginTop="35sp"
        android:layout_marginStart="125sp"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCDF CASE" />
    <TextView
        android:id="@+id/c1"
        android:layout_marginTop="30sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case Name:" />
    <TextView
        android:id="@+id/c2"
        android:layout_marginTop="60sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:" />
    <TextView
        android:id="@+id/c3"
        android:layout_marginTop="95sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victim:" />
    <TextView
        android:id="@+id/c4"
        android:layout_marginTop="125sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:" />
    <TextView
        android:id="@+id/c5"
        android:layout_marginTop="155sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Date:" />
    <TextView
        android:id="@+id/c6"
        android:layout_marginTop="185sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:" />
    <TextView
        android:id="@+id/c7"
        android:layout_marginTop="215sp"
        android:layout_marginStart="5sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspect:" />
    <TextView
        android:id="@+id/casecat"
        android:layout_marginTop="65sp"
        android:layout_marginStart="125sp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASE CATEGORY" />
    <TextView
        android:id="@+id/victim"
        android:layout_marginTop="95sp"
        android:layout_marginStart="125sp"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASE Location" />
    <TextView
        android:id="@+id/start"
        android:layout_marginTop="125sp"
        android:layout_marginStart="125sp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASE startdate here" />

    <TextView
        android:id="@+id/close"
        android:layout_marginTop="155sp"
        android:layout_marginStart="125sp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASE closedate here"/>
    <TextView
        android:id="@+id/locationcase"
        android:layout_marginTop="185sp"
        android:layout_marginStart="125sp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victim name"/>
    <TextView
        android:id="@+id/suspect"
        android:textColor="@color/red"
        android:layout_marginTop="215sp"
        android:layout_marginStart="125sp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspect Name"/>



</androidx.cardview.widget.CardView>