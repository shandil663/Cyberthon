<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:padding="3dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"


    >

    <androidx.cardview.widget.CardView
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="90sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="5sp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/eviimg"
            android:padding="5sp"
            android:layout_width="170sp"
            android:layout_height="140sp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_5" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/casenamehere"
        android:layout_marginTop="40sp"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:textSize="18sp"
        android:maxEms="8"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCDF CASE sdbbwbwfjbfbasfb" />
    <TextView
        android:id="@+id/casenamecat"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_marginTop="115sp"
        android:layout_marginStart="20sp"
        android:layout_gravity="center_horizontal|start"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cyber Crime" />
    <TextView
        android:id="@+id/casedesc"
        android:layout_marginTop="180sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case description will be here ,tell the user about the case how the incident happened and so on and other relevent info about the case. " />


</androidx.cardview.widget.CardView>