<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Communication">

    <TextView
        android:id="@+id/textincident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90sp"
        android:text="Cyber Communication"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="60sp"
       />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardchatid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50sp"
        android:layout_marginStart="7sp"
        android:layout_marginTop="770sp"
        app:cardCornerRadius="15sp"
        app:cardElevation="5sp"
       >

        <EditText
            android:id="@+id/chatedit"
            android:layout_width="330sp"
            android:layout_height="wrap_content"
            android:background="@drawable/customedit1"
            android:ems="10"
            android:inputType="text"
            android:padding="10sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50sp"
        android:layout_marginTop="770sp"
        android:layout_marginStart="343sp"
        >
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:padding="5sp"
            android:src="@drawable/img_8" />
    </androidx.cardview.widget.CardView>



</RelativeLayout>